{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Bienvenue sur le BackOffice de Sport Live</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center">Connectez-vous</h4>
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form action="{{ path('app_security_login') }}" method="post">
                        <div class="form-group">
                            <label for="username">Email:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required/>
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe:</label>
                            <input class="form-control" type="password" id="password" name="_password" required/>
                        </div>

                        {# If you want to control the URL the user is redirected to on success#}        
                        <input type="hidden" name="admin" value="/admin"/> 

                        <div class="form-group text-center">
                            <button class="btn btn-success btn-lg" type="submit">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
