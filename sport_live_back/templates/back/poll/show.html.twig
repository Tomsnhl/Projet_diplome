{% extends 'back/base.html.twig' %}

{% block title %}Poll details{% endblock %}

{% block subBody %}
    <div class="container mt-5">
        <h1 class="mb-4">Détails du sondage</h1>

        <div class="card mb-4">
            <div class="card-header">
                Informations
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> {{ poll.id }}</p>
                <p><strong>Contenu:</strong> {{ poll.content }}</p>
                <p><strong>Utilisateur:</strong> {{ poll.user ? poll.user.email : 'Aucun utilisateur associé' }}</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Réponses
            </div>
            <ul class="list-group list-group-flush">
                {% for answer in poll.answers %}
                    <li class="list-group-item">{{ answer.content }}</li>
                {% else %}
                    <li class="list-group-item">Aucune réponse disponible pour ce sondage.</li>
                {% endfor %}
            </ul>
        </div>

        <div class="mt-3">
            <a href="{{ path('admin_polls_index') }}" class="btn btn-info btn">Retour à la liste</a>
            <a href="{{ path('admin') }}" class="btn btn-info btn">Retour au Dashboard</a>
        </div>
    </div>
{% endblock %}
