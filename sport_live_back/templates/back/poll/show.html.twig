{% extends 'back/base.html.twig' %}

{% block title %}Détails des Sondages{% endblock %}

{% block subBody %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du sondage</h1>

    <div class="card mb-4">
        <div class="card-header">
            Informations
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> {{ poll.id }}</p>
            <p><strong>Contenu:</strong> {{ poll.content }}</p> 
            <p><strong>Utilisateur:</strong> {{ poll.user ? poll.user.email : 'Aucun utilisateur associé' }}</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Réponses
            <a href="{{ path('admin_answer_new', {'id': poll.id}) }}" class="btn btn-success btn-sm float-end">Ajouter une réponse</a>
        </div>
        <ul class="list-group list-group-flush">
            {% for answer in poll.answers %}
                <li class="list-group-item">
                    {{ answer.content }}
                    <a href="{{ path('admin_answer_edit', {'id': answer.id}) }}" class="btn btn-warning btn-sm float-end ms-2">Modifier</a>
                    <a href="{{ path('admin_answer_delete', {'id': answer.id}) }}" class="btn btn-danger btn-sm float-end">Supprimer</a>
                </li>
            {% else %}
                <li class="list-group-item">Aucune réponse disponible pour ce sondage.</li>
            {% endfor %}
        </ul>
    </div>

    <div class="mt-3">
        <a href="{{ path('admin_polls_index') }}" class="btn btn-info">Retour à la liste</a>
        <a href="{{ path('admin') }}" class="btn btn-info">Retour au Dashboard</a>
    </div>
</div>
{% endblock %}
