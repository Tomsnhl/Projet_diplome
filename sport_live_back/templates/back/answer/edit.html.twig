{% extends 'back/base.html.twig' %}

{% block title %}Modifier la Réponse{% endblock %}

{% block subBody %}
<div class="container mt-5">
    <h1>Modifier la Réponse</h1>
    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.content, 'Réponse', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div>
        <button type="submit" class="btn btn-success">Mettre à jour</button>   
    </div>
    {{ form_end(form) }}
    <div class="mt-3">
        <a href="{{ path('admin_polls_show', {'id': answer.poll.id}) }}" class="btn btn-info">Retour au Sondage</a>
    </div>
    <div class="mt-3">
        {{ include('back/answer/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
