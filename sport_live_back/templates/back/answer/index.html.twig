{% extends 'back/base.html.twig' %}

{% block title %}Liste des Réponses{% endblock %}

{% block subBody %}
<div class="container mt-5">
    <h1>Liste des Réponses</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Contenu</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for answer in answers %}
                <tr>
                    <td>{{ answer.content }}</td>
                    <td>
                        <a href="{{ path('admin_answer_edit', {'id': answer.id}) }}" class="btn btn-primary">Modifier</a>
                        {{ include('back/answer/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucune réponse disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
