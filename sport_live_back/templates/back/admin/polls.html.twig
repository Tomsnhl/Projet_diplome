{% extends 'back/base.html.twig' %}

{% block title %}Poll index{% endblock %}
{% block pollActive %}active{% endblock %}

{% block subBody %}
    <h1>Les Sondages</h1>

    <table class="table table-bordered table-hover"> {# Ajout de classes Bootstrap pour un meilleur style #}
        <thead class="thead-light"> {# Ajout de classe pour un en-tête plus clair #}
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poll in polls %}
            <tr>
                <td>{{ poll.id }}</td>
                <td>{{ poll.content }}</td>
                <td>{{ poll.user ? poll.user.email : 'N/A' }}</td> {# Je suppose que vous souhaitez afficher l'email de l'utilisateur. Changez selon vos besoins. #}
                <td>
                    <a href="{{ path('admin_polls_show', {'id': poll.id}) }}" class="btn btn-info btn-sm">Voir</a> {# Bouton bleu pour "Voir" #}
                    <a href="{{ path('admin_polls_edit', {'id': poll.id}) }}" class="btn btn-primary btn-sm">Modifier</a> {# Bouton bleu foncé pour "Modifier" #}
                    <button class="btn btn-danger btn-sm" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce sondage?')) { document.getElementById('delete-form-{{ poll.id }}').submit(); }">Supprimer</button>
                        <form id="delete-form-{{ poll.id }}" action="{{ path('admin_polls_delete', {'id': poll.id}) }}" method="post" style="display: none;">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poll.id) }}">
                        </form>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_polls_new') }}" class="btn btn-success mt-3">Crée un nouveau sondage</a> {# Bouton vert pour créer un nouveau sondage #}
{% endblock %}
