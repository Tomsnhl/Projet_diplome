{% extends 'back/base.html.twig' %}

{% block title %}Index des messages{% endblock %}
{% block userActive %}active{% endblock %}

{% block subBody %}
    <h1>Index des messages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                
                <td>
                    <a href="{{ path('admin_message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('admin_message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_message_new') }}">Ecrire un nouveau message</a>
{% endblock %}
