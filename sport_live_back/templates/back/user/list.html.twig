{% extends 'back/base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}
{% block userActive %}active{% endblock %}

{% block subBody %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Utilisateurs</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Mot de passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_back_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('admin') }}" class="btn btn-info btn">Retour au Dashboard</a>
    </div>
</div>
{% endblock %}
