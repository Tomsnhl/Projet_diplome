<div class="container mt-5">
    <h1 class="mb-4">Modifier l'Utilisateur</h1>

    <div class="card mb-4">
        <div class="card-body">
            {{ include('back/user/_form.html.twig', {'button_label': 'Mettre à jour', 'attr': {'class': 'mb-3'}}) }}
